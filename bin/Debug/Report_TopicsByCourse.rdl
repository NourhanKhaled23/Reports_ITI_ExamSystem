<?xml version="1.0" encoding="utf-8"?>
<Report xmlns="http://schemas.microsoft.com/sqlserver/reporting/2016/01/reportdefinition" xmlns:rd="http://schemas.microsoft.com/SQLServer/reporting/reportdesigner">
  <AutoRefresh>0</AutoRefresh>
  <DataSources>
    <DataSource Name="ITIExamDB">
      <ConnectionProperties>
        <DataProvider>SQL</DataProvider>
        <ConnectString>Data Source=.;Initial Catalog=ITIExamintaionSystem;Integrated Security=True</ConnectString>
      </ConnectionProperties>
    </DataSource>
  </DataSources>
  <DataSets>
    <DataSet Name="CourseList">
      <Query>
        <DataSourceName>ITIExamDB</DataSourceName>
        <CommandType>StoredProcedure</CommandType>
        <CommandText>SP_Report_GetAllCourses</CommandText>
      </Query>
      <Fields>
        <Field Name="Id"><DataField>Id</DataField></Field>
        <Field Name="Title"><DataField>Title</DataField></Field>
      </Fields>
    </DataSet>
    <DataSet Name="TopicsByCourse">
      <Query>
        <DataSourceName>ITIExamDB</DataSourceName>
        <CommandType>StoredProcedure</CommandType>
        <CommandText>SP_Report_TopicsByCourse</CommandText>
        <QueryParameters>
          <QueryParameter Name="@CourseId">
            <Value>=Parameters!CourseId.Value</Value>
          </QueryParameter>
        </QueryParameters>
      </Query>
      <Fields>
        <Field Name="CourseId"><DataField>CourseId</DataField></Field>
        <Field Name="CourseName"><DataField>CourseName</DataField></Field>
        <Field Name="CourseCode"><DataField>CourseCode</DataField></Field>
        <Field Name="CourseDescription"><DataField>CourseDescription</DataField></Field>
        <Field Name="DurationDays"><DataField>DurationDays</DataField></Field>
        <Field Name="TopicId"><DataField>TopicId</DataField></Field>
        <Field Name="TopicName"><DataField>TopicName</DataField></Field>
        <Field Name="TopicOrder"><DataField>TopicOrder</DataField></Field>
        <Field Name="IsRequired"><DataField>IsRequired</DataField></Field>
      </Fields>
    </DataSet>
  </DataSets>
  <ReportParameters>
    <ReportParameter Name="CourseId">
      <DataType>Integer</DataType>
      <Prompt>Select Course</Prompt>
      <ValidValues>
        <DataSetReference>
          <DataSetName>CourseList</DataSetName>
          <ValueField>Id</ValueField>
          <LabelField>Title</LabelField>
        </DataSetReference>
      </ValidValues>
    </ReportParameter>
  </ReportParameters>
  <ReportSections>
    <ReportSection>
      <Body>
        <ReportItems>
          <Textbox Name="Title"><Top>0.1in</Top><Left>0in</Left><Height>0.4in</Height><Width>7in</Width>
            <Paragraphs><Paragraph><TextRuns><TextRun><Value>Course Topics Report</Value>
              <Style><FontSize>18pt</FontSize><FontWeight>Bold</FontWeight><Color>#1e3a5f</Color></Style>
            </TextRun></TextRuns><Style><TextAlign>Center</TextAlign></Style></Paragraph></Paragraphs>
          </Textbox>
          <Textbox Name="CourseInfo"><Top>0.55in</Top><Left>0in</Left><Height>0.3in</Height><Width>7in</Width>
            <Paragraphs><Paragraph><TextRuns><TextRun>
              <Value>=First(Fields!CourseName.Value, "TopicsByCourse") &amp; " (" &amp; First(Fields!CourseCode.Value, "TopicsByCourse") &amp; ") - " &amp; First(Fields!DurationDays.Value, "TopicsByCourse") &amp; " Days"</Value>
              <Style><FontSize>12pt</FontSize><FontWeight>Bold</FontWeight><Color>#4a4a4a</Color></Style>
            </TextRun></TextRuns><Style><TextAlign>Center</TextAlign></Style></Paragraph></Paragraphs>
          </Textbox>
          <Tablix Name="TopicsTable">
            <TablixBody>
              <TablixColumns>
                <TablixColumn><Width>0.8in</Width></TablixColumn>
                <TablixColumn><Width>4in</Width></TablixColumn>
                <TablixColumn><Width>1in</Width></TablixColumn>
              </TablixColumns>
              <TablixRows>
                <TablixRow><Height>0.3in</Height>
                  <TablixCells>
                    <TablixCell><CellContents><Textbox Name="H1"><Paragraphs><Paragraph><TextRuns><TextRun><Value>Order</Value><Style><FontWeight>Bold</FontWeight><Color>White</Color></Style></TextRun></TextRuns><Style><TextAlign>Center</TextAlign></Style></Paragraph></Paragraphs><Style><BackgroundColor>#1e3a5f</BackgroundColor></Style></Textbox></CellContents></TablixCell>
                    <TablixCell><CellContents><Textbox Name="H2"><Paragraphs><Paragraph><TextRuns><TextRun><Value>Topic Name</Value><Style><FontWeight>Bold</FontWeight><Color>White</Color></Style></TextRun></TextRuns></Paragraph></Paragraphs><Style><BackgroundColor>#1e3a5f</BackgroundColor></Style></Textbox></CellContents></TablixCell>
                    <TablixCell><CellContents><Textbox Name="H3"><Paragraphs><Paragraph><TextRuns><TextRun><Value>Required</Value><Style><FontWeight>Bold</FontWeight><Color>White</Color></Style></TextRun></TextRuns><Style><TextAlign>Center</TextAlign></Style></Paragraph></Paragraphs><Style><BackgroundColor>#1e3a5f</BackgroundColor></Style></Textbox></CellContents></TablixCell>
                  </TablixCells>
                </TablixRow>
                <TablixRow><Height>0.25in</Height>
                  <TablixCells>
                    <TablixCell><CellContents><Textbox Name="C1"><Paragraphs><Paragraph><TextRuns><TextRun><Value>=Fields!TopicOrder.Value</Value></TextRun></TextRuns><Style><TextAlign>Center</TextAlign></Style></Paragraph></Paragraphs><Style><BackgroundColor>=IIF(RowNumber(Nothing) Mod 2 = 0, "#f2f2f2", "White")</BackgroundColor></Style></Textbox></CellContents></TablixCell>
                    <TablixCell><CellContents><Textbox Name="C2"><Paragraphs><Paragraph><TextRuns><TextRun><Value>=Fields!TopicName.Value</Value><Style><FontWeight>SemiBold</FontWeight></Style></TextRun></TextRuns></Paragraph></Paragraphs><Style><BackgroundColor>=IIF(RowNumber(Nothing) Mod 2 = 0, "#f2f2f2", "White")</BackgroundColor></Style></Textbox></CellContents></TablixCell>
                    <TablixCell><CellContents><Textbox Name="C3"><Paragraphs><Paragraph><TextRuns><TextRun><Value>=IIF(Fields!IsRequired.Value = True, "Yes", "No")</Value><Style><Color>=IIF(Fields!IsRequired.Value = True, "Green", "Gray")</Color></Style></TextRun></TextRuns><Style><TextAlign>Center</TextAlign></Style></Paragraph></Paragraphs><Style><BackgroundColor>=IIF(RowNumber(Nothing) Mod 2 = 0, "#f2f2f2", "White")</BackgroundColor></Style></Textbox></CellContents></TablixCell>
                  </TablixCells>
                </TablixRow>
              </TablixRows>
            </TablixBody>
            <TablixColumnHierarchy><TablixMembers><TablixMember/><TablixMember/><TablixMember/></TablixMembers></TablixColumnHierarchy>
            <TablixRowHierarchy><TablixMembers><TablixMember><KeepWithGroup>After</KeepWithGroup></TablixMember><TablixMember><Group Name="Details"/></TablixMember></TablixMembers></TablixRowHierarchy>
            <DataSetName>TopicsByCourse</DataSetName>
            <Top>1in</Top><Left>0.5in</Left><Height>0.55in</Height><Width>5.8in</Width>
          </Tablix>
          <Textbox Name="TotalTopics"><Top>1.6in</Top><Left>4in</Left><Height>0.25in</Height><Width>2.3in</Width>
            <Paragraphs><Paragraph><TextRuns><TextRun>
              <Value>="Total Topics: " &amp; Count(Fields!TopicId.Value, "TopicsByCourse")</Value>
              <Style><FontWeight>Bold</FontWeight><Color>#1e3a5f</Color></Style>
            </TextRun></TextRuns><Style><TextAlign>Right</TextAlign></Style></Paragraph></Paragraphs>
          </Textbox>
        </ReportItems>
        <Height>2in</Height>
      </Body>
      <Width>7.5in</Width>
      <Page><LeftMargin>0.5in</LeftMargin><RightMargin>0.5in</RightMargin><TopMargin>0.5in</TopMargin><BottomMargin>0.5in</BottomMargin></Page>
    </ReportSection>
  </ReportSections>
</Report>
